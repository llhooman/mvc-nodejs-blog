<div class="first-post">
    <img
        class="first-post-img"
        src="/images/<%=posts[0].image%>"
        alt="first post"
    />
    <div class="first-post-text">
        <h1><%=posts[0].title %></h1>
        <p><%=posts[0].desc %></p>
    </div>
    <a class="btn" href="posts/<%= posts[0].id%>">Read more</a>
</div>
